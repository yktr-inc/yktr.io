{% extends 'Front/layouts/app.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}


{% block body %}
<div class="container">
<div class="row">
  <div class="card col-md-6 m-auto login-container">
    <div class="text-center mt-5">
      <h2> {{ config.get('sitename') }} </h2>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            {% if error is defined and error is not null %}
                <div class="mt-6 text-center text-red italic">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        {{ form_end(form) }}
        <a href="{{ path('app_front_security_forgotten_password') }}"> Forgot password ? </a>
  </div>
  </div>
  </div>
</div>
{% endblock %}
