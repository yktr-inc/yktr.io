{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="{{ path('dashboard_teacher') }} ">Home</a></li>
      <li class="breadcrumb-item active">Courses</li>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('dashboard') }}
{% endblock %}

{% block body %}
<div class="col-lg-2 m-auto">
    <div class="custom-select" style="width:200px;">
      <select>
        <option value="2018">2018-2019</option>
        <option value="2019">2019-2020</option>
      </select>
    </div>
</div>
<div class="col-lg-11 m-auto">
    <div class="card dashboard-item dashboard-small-list">
        <div class="card-header card-header-{{ colorClass }}">
            <h4 class="card-title">Courses</a></h4>
      </div>
        <div class="card-body table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Classroom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.title }}</td>
                <td>{{ course.classroom.name }}</td>
                <td>
                    <a class="btn btn-default btn-sm" role="button" href="{{ path('teacher_course_show', {'id': course.id}) }}">View</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
{% endblock %}
