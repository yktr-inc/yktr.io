{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="{{ path('dashboard')}}">Home</a></li>
      <li class="breadcrumb-item"><a href="{{ path('promotion_index')}}">Promotions</a></li>
      <li class="breadcrumb-item active">{{ promotion.getTitle }}, {{ promotion.getSpeciality }}</li>
{% endblock %}
{% block body %}
<div class="card m-auto w-75">
    <div class="card-header card-header-primary row">
        <div class="col-md-6">
            <h4 class="card-title">Promotions</h4>
        </div>
        <div class="col-md-6">
            <a class="btn btn-default" role="button" href="{{ path('promotion_index') }}">back to list</a>
            <a class="btn btn-info" role="button" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
            {{ include('Back/promotion/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ promotion.title }}</td>
            </tr>
            <tr>
                <th>Speciality</th>
                <td>{{ promotion.speciality }}</td>
            </tr>
            <tr>
                <th>Started at</th>
                <td>{{ promotion.startedAt ? promotion.startedAt|date('M Y') : '' }}</td>
            </tr>
            <tr>
                <th>End at</th>
                <td>{{ promotion.finishedAt ? promotion.finishedAt|date('M Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
