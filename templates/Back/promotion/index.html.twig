{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item active">Promotions</li>
{% endblock %}

{% block body %}
<div class="card m-auto w-75">
    <div class="card-header card-header-primary row">
        <h4 class="card-title col-md-10">Promotions</h4>
        <div class="col-md-2">
            <a class="btn btn-primary" role="button" href="{{ path('promotion_new') }}">Create new</a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Speciality</th>
                <th>StartedAt</th>
                <th>FinishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.title }}</td>
                <td>{{ promotion.speciality }}</td>
                <td>{{ promotion.startedAt ? promotion.startedAt|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.finishedAt ? promotion.finishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-default" role="button" href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a class="btn btn-info" role="button" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
