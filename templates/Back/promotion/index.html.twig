{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Library</a></li>
      <li class="breadcrumb-item active" aria-current="page">Data</li>
{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Speciality</th>
                <th>StartedAt</th>
                <th>FinishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.title }}</td>
                <td>{{ promotion.speciality }}</td>
                <td>{{ promotion.startedAt ? promotion.startedAt|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.finishedAt ? promotion.finishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
