{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="{{ path('dashboard')}}">Home</a></li>
      <li class="breadcrumb-item active">Informations</li>
{% endblock %}

{% block body %}
<div class="card m-auto w-90">
    <div class="card-header card-header-primary row">
        <h4 class="card-title col-md-10">Informations</h4>
        <div class="col-md-2">
            <a class="btn btn-primary" role="button" href="{{ path('information_new') }}">Create new</a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information in information %}
            <tr>
                <td>{{ information.title }}</td>
                <td>{{ information.content|raw }}</td>
                <td>{{ information.owner.firstname }} {{ information.owner.lastname }}</td>
                <td>{{ information.publishedAt ? information.publishedAt|date('d/m/Y') : '' }}</td>
                <td>
                    <a class="btn btn-default btn-md" role="button" href="{{ path('information_show', {'id': information.id}) }}">show</a>
                    <a class="btn btn-warning btn-md" role="button" href="{{ path('information_edit', {'id': information.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No informations found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
