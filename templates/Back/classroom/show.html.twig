{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Library</a></li>
      <li class="breadcrumb-item active" aria-current="page">Data</li>
{% endblock %}

{% block body %}
    <h1>Classroom</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classroom.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classroom.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ classroom.createdAt ? classroom.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ classroom.updatedAt ? classroom.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('Back/classroom_index') }}">back to list</a>

    <a href="{{ path('Back/classroom_edit', {'id': classroom.id}) }}">edit</a>

    {{ include('classroom/_delete_form.html.twig') }}
{% endblock %}
