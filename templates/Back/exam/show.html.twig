{% extends 'Back/layouts/app.html.twig' %}

{% block breadcrumb %}
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Library</a></li>
      <li class="breadcrumb-item active" aria-current="page">Data</li>
{% endblock %}

{% block body %}
<div class="card m-auto w-90">
    <div class="card-header card-header-primary">
        <h4 class="card-title">{{ exam.name }}</h4>
    </div>
    <div class="card-body">
        <div class="clear mb-2">
            <a class="btn btn-default btn-sm" role="button" href="{{ path('exam_index') }}">back to list</a>
        </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exam.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ exam.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exam.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ exam.date ? exam.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('exam_index') }}">back to list</a>

    <a href="{{ path('exam_edit', {'id': exam.id}) }}">edit</a>

    {{ include('Back/exam/_delete_form.html.twig') }}
</div>
</div>
{% endblock %}
