<div class="col-lg-3">
    <div class="card dashboard-item dashboard-small-list">
        <div class="card-header card-header-{{ colorClass }}">
            <h4 class="card-title">Upcoming Exams</h4>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover">
                {% if lastExams is not empty %}
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Date</th>
                    </tr>
                </thead>
                {% endif %}
                <tbody>
                    {% for exam in lastExams %}
                    <tr>
                        <td>{{ exam.name }}</td>
                        <td>{{ exam.course.title }}</td>
                        <td>
                            <span class="card-title">{{ exam.getDate|date('d/m/Y') }}</span>
                        </td>
                    </tr>
                    {% else %}
                    <tr> No upcoming exams </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
